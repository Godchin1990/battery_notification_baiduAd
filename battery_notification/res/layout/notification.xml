<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <!-- android:background="@drawable/notification_information_bg" -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/notification_information_bg"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" 
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/battery_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:src="@drawable/notification_battery_logo_99" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:text="@string/minggo_battery"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/body_line_2" />

        <TextView
            android:id="@+id/feelings_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/thursday"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:textSize="14dp" />
    </LinearLayout>

</RelativeLayout>